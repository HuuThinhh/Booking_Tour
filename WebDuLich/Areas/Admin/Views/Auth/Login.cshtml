
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/Public/images/admin_images/l.png">
    <title>Đăng nhập Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="~/Public/css/app.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="wrapper mt-md-5">
            <div action="" class="form-login">
                <h1 class="form-heading"> Đăng Nhập Admin</h1>
                <div class="form-group">
                    <i class="bi bi-person"></i>
                    <input name="email" type="text" required class="form-input" placeholder="Email">
                </div>
                <div class="form-group">
                    <i class="bi bi-key"></i>
                    <input name="password" type="password" required class="form-input" placeholder="Mật khẩu">
                    <div id="eye">
                        <i class="bi bi-eye"></i>
                    </div>
                </div>
                <input type="submit" value="Đăng nhập" class="form-submit">
                <div class="error">
                    <p></p>
                    @ViewBag.Error
                </div>
            </div>
        </div>
    }
</body>
<script src="https://code.jquery.com/jquery-3.6.4.js"></script>
<script src="~/Public/js/app.js"></script>
</html>